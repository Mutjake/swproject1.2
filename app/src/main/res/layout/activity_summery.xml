<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.swproject.fi.swproject.SummeryActivity">

    <TextView android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <Button
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device usage in different time"
        android:id="@+id/btnDevByTime"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView android:text="@string/traffic_by_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/btnDevByTime" />

    <Button
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See detail"
        android:id="@+id/btnTraByCou"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/data_by_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_databytime"
        android:layout_below="@+id/btnTraByCou"
        />

    <Button
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See detail"
        android:id="@+id/btn_databytime"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btnTraByCou" />

</RelativeLayout>
