<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.swproject.fi.swproject.SomeActivity">


    <Button
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Report"
        android:id="@+id/btn_Report"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="hostname"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editHostName"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mac"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/editMac"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editMac"
        android:layout_below="@+id/editHostName"
        android:layout_alignStart="@+id/editHostName"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editName"
        android:layout_below="@+id/editMac"
        android:layout_marginTop="46dp"
        android:layout_alignStart="@+id/editMac"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:background="@drawable/button_style"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Name"
        android:id="@+id/btn_setName"
        android:layout_alignBottom="@+id/editName"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor Device       "
        android:id="@+id/switch_Monitor"
        android:layout_marginTop="41dp"
        android:checked="false"
        android:layout_below="@+id/editName"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block from Internet"
        android:id="@+id/switch_blockInternet"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block from Lan       "
        android:id="@+id/switch_blockLan"
        android:layout_below="@+id/switch_blockInternet"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:checked="false" />


</RelativeLayout>
