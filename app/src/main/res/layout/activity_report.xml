<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.swproject.fi.swproject.ReportActivity">

    <TextView
        android:text="Device network usage report"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFeatureSettings="@string/abc_action_bar_home_description_format"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Connections"
        android:id="@+id/btn_showConnections"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="startDataActivity" />

</RelativeLayout>
